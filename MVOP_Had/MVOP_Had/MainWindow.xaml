<Window x:Class="MVOP_Had.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake" Height="440" Width="597" KeyDown="Window_KeyDown" Background="#FF29C0E2" Visibility="Visible">
    <Grid Background="#FFD14B18">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="canvas1" Grid.Column="0" Background="Black" Width="400" Height="400"></Canvas>

        <TextBlock x:Name="tbS" Grid.Column="1" Canvas.Left="20" Canvas.Top="50" HorizontalAlignment="Left" Height="25" VerticalAlignment="Center" FontFamily="Segoe UI Black" FontSize="18" Margin="0,0,0,27" Text="Score:"/>
        <TextBlock x:Name="tbHs" Grid.Column="1" HorizontalAlignment="Left" Height="31" VerticalAlignment="Center" FontFamily="Segoe UI Black" FontSize="18" Margin="0,42,0,0" Text="HighScore: "/>
        <Label x:Name="label1" HorizontalAlignment="Center" Content="STISKNI ENTER" VerticalAlignment="Center" Foreground="#FF16FF0B" Height="82" FontWeight="Bold" FontSize="36"/>


    </Grid>
</Window>
